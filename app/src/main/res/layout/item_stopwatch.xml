<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/recycler_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/home_playbutton" />

        <TextView
            android:id="@+id/focus_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="집중 시간 측정 :"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/rixyeoljeongdoregular"/>

        <TextView
            android:id="@+id/focus_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/rixyeoljeongdoregular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="15sp"
            android:fontFamily="@font/rixyeoljeongdoregular"/>

        <TextView
            android:id="@+id/focus_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="15sp"
            android:fontFamily="@font/rixyeoljeongdoregular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="15sp"
            android:fontFamily="@font/rixyeoljeongdoregular"/>

        <TextView
            android:id="@+id/focus_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:layout_weight="1"
            android:textSize="15sp"
            android:fontFamily="@font/rixyeoljeongdoregular"/>

        <Button
            android:id="@+id/focus_del"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="70dp"
            android:background="@drawable/x_btn" />

    </LinearLayout>




</LinearLayout>