<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/action_bar03"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/img_wave"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/AB_TV_03"
            android:layout_width="135dp"
            android:layout_height="57dp"
            android:layout_marginStart="138dp"
            android:layout_marginEnd="52dp"
            android:fontFamily="@font/payboocotfextrabold"
            android:gravity="center"
            android:text="카테고리 추가"
            android:textColor="@color/white"
            android:textSize="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/detailCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/rixyeoljeongdoregular"
        android:hint="카테고리 이름 입력"
        android:stateListAnimator="@null"
        android:textColor="#404040"
        app:layout_constraintTop_toBottomOf="@+id/action_bar03" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/detailTodoItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/rixyeoljeongdoregular"
        android:hint="통제목록 입력"
        android:stateListAnimator="@null"
        android:textColor="#404040"
        app:layout_constraintTop_toBottomOf="@id/detailCategoryName" />

    <Button

        android:id="@+id/detailaddTodoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rixyeoljeongdoregular"
        android:stateListAnimator="@null"
        android:text="통제목록 추가"
        android:textColor="#404040"
        app:layout_constraintEnd_toEndOf="@id/detailTodoItem"
        app:layout_constraintTop_toBottomOf="@id/detailTodoItem" />


    <!-- 카테고리 이름과 아이템 입력 필드 유지 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detailRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="10dp"
        android:fontFamily="@font/barunhipi"
        android:scrollbars="vertical"
        android:stateListAnimator="@null"
        android:textColor="#404040"
        app:layout_constraintTop_toBottomOf="@id/detailaddTodoButton"
        tools:layout_editor_absoluteX="53dp" />

<!--    리사이클러뷰 에러가 발생하면 아래 세줄 삭제할 것 -->

    <Button
        android:id="@+id/detailsaveCategoryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/rixyeoljeongdoregular"
        android:stateListAnimator="@null"
        android:text="수정"
        android:textColor="#404040"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>