<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Linear01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리 수정"
            android:textSize="25dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <EditText
        android:id="@+id/detailCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="카테고리 이름 입력"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Linear01"/>

    <EditText
        android:id="@+id/detailTodoItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="통제목록 입력"
        app:layout_constraintTop_toBottomOf="@id/detailCategoryName"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/addTodoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="통제목록 추가"
        app:layout_constraintTop_toBottomOf="@id/detailTodoItem"
        app:layout_constraintEnd_toEndOf="@id/detailTodoItem"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detailRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="10dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/addTodoButton"/>


    <!-- 카테고리 이름과 아이템 입력 필드 유지 -->
    <Button
        android:id="@+id/detailsaveCategoryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="수정"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="onSaveCategoryClicked" /> <!-- 수정: 클릭 리스너 연결 -->

</androidx.constraintlayout.widget.ConstraintLayout>