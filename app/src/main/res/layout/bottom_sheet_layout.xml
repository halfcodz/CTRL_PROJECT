<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/SD_linear01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/missonClear"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/rixyeoljeongdoregular"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:text="성공"
            android:background="#C3CDFA" />

        <Button
            android:id="@+id/missonFail"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/rixyeoljeongdoregular"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:text="실패"
            android:background="#FFCCCC" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/slidedrawer_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/slide_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        android:fontFamily="@font/rixyeoljeongdoregular"
        android:background="@drawable/round_button"
        android:textColor="@color/white" />
</LinearLayout>