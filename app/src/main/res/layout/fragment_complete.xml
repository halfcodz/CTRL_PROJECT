<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCCCFF"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/schedule_Main"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:fontFamily="@font/rixyeoljeongdoregular"
            android:gravity="center"
            android:text="[ 통계 ]"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/success_btn"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:drawableLeft="@drawable/success"
            android:fontFamily="@font/rixyeoljeongdoregular"
            android:paddingLeft="35dp"
            android:text="성공"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <Button
            android:id="@+id/fail_btn"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:drawableLeft="@drawable/fail"
            android:fontFamily="@font/rixyeoljeongdoregular"
            android:paddingLeft="35dp"
            android:text="실패"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <Button
            android:id="@+id/ctrl_btn"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:drawableLeft="@drawable/ctrl"
            android:fontFamily="@font/rixyeoljeongdoregular"
            android:paddingLeft="35dp"
            android:text="통제"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>

</LinearLayout>