<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/img_wave"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/schedule_Main"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:fontFamily="@font/rixyeoljeongdoregular"
            android:gravity="center"
            android:text="statistics"
            android:textColor="@color/white"
            android:textSize="21sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/success_btn"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/success_round_button"
            android:drawableLeft="@drawable/success"
            android:fontFamily="@font/rixyeoljeongdoregular"
            android:paddingLeft="35dp"
            android:text="성공 리스트"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <Button
            android:id="@+id/fail_btn"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/fail_round_button"
            android:drawableLeft="@drawable/fail"
            android:fontFamily="@font/rixyeoljeongdoregular"
            android:paddingLeft="35dp"
            android:text="실패 리스트"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <Button
            android:id="@+id/ctrl_btn"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/control_round_button"
            android:drawableLeft="@drawable/ctrl"
            android:fontFamily="@font/rixyeoljeongdoregular"
            android:paddingLeft="35dp"
            android:text="통제 실패"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35sp" />
    </LinearLayout>

</LinearLayout>